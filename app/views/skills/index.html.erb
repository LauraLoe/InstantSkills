<div class="container mt-5">
<h3 class="+mt-5">All skills</h3>
  <div class="container my-5">
<div class="cards">
<% @skills.each do |skill| %>
    <a href="../skills/<%= skill.id%>" class='properlink'>
    <div class="card-trip">
    <img src=<%= skill.img_url%> />
    <div class="card-trip-infos">
      <div>
        <h2 class='myclass'><%= "#{skill.name}" %></h2>
        <p><%= "Level #{skill.level}" %></p>
      </div>
      <h2 class="card-trip-pricing"><%= "#{skill.price}" %></h2>
    </div>
    </div>
    </a>
<% end %>
</div>
</div>
</div>
