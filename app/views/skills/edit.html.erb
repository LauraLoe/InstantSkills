<h3>Edit your skill - this is a placeholder</h3>
        <%= simple_form_for @skill do |f| %>
          <%= f.input :name, placeholder: 'Enter skill name' %>
          <%= f.input :description, placeholder: 'Enter description' %>
          <%= f.input :price, placeholder: 'Enter price' %>
          <%= f.input :level, placeholder: 'Enter level' %>
          <%= f.input :photo, as: :file %>
          <%= f.submit class: 'btn btn-flat' %>
        <% end %>
