
<div id="large-header" class="banner vh-75" style="background-image: url('https://s3-us-west-2.amazonaws.com/s.cdpn.io/499416/demo-bg.jpg');">
  <canvas id="demo-canvas"></canvas>
  <div class="container">

    <h1>The skills you need - instantly</h1>
    <p>Change your life and use the skills that somebody else does not need.</p>
    <%= form_with url: skills_path, method: :get, class: "search-box-home" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "search-input",
        placeholder: "Find a skill"
      %>
      <button class="search-btn">
        <i class="fas fa-search"></i>
      </button>
    <% end %>
  </div>
</div>

<script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/499416/TweenLite.min.js"></script>
<script src="https://s3-us-west-2.amazonaws.com/s.cdpn.io/499416/EasePack.min.js"></script>
