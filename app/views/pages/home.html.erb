<div class="banner" style="background-image: url(<%= asset_path('banner.png') %>);">
  <div class="container textcont">
    <h1>The skills you need - instantly</h1>
    <p>Change your life and use the skills that somebody else does not need.</p>
  </div>
</div>

<div class = "container mt-5">
<form novalidate="novalidate" class="simple_form search" action="/" accept-charset="UTF-8" method="get">
  <div class="search-form-control form-group">
    <input class="form-control string required" type="text" name="search[query]" id="search_query" />
    <button name="button" type="submit" class="btn btn-flat">
      <i class="fas fa-search"></i> Search
    </button>
  </div>
</form>
</div>

<div class="container my-5">
<div class="cards">
<% @skills.each do |skill| %>
    <a href="../skills/<%= skill.id%>" class='cardlink'>
    <div class="card-trip">
    <img src=<%= cl_image_tag photo.key %> />
    <div class="card-trip-infos">
      <div>
        <h2 class='myclass'><%= "#{skill.name}" %></h2>
        <p><%= "Level #{skill.level}" %></p>
      </div>
      <h2 class="card-trip-pricing"><%= "#{skill.price}" %> â‚¬</h2>
    </div>
    </div>
    </a>
<% end %>
</div>
</div>
